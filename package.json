{
	"name": "rediredge",
	"private": true,
	"type": "module",
	"workspaces": {
		"packages": [
			"apps/*",
			"packages/*",
			"redirector"
		],
		"catalog": {
			"next": "15.5.4",
			"zod": "^4.0.2",
			"@trpc/server": "^11.5.0",
			"@trpc/client": "^11.5.0",
			"better-auth": "^1.3.13",
			"@polar-sh/better-auth": "^1.1.3",
			"dotenv": "^17.2.2",
			"tsdown": "^0.15.5"
		}
	},
	"scripts": {
		"check": "biome check --write .",
		"prepare": "husky",
		"ruler:apply": "bunx @intellectronica/ruler@latest apply --local-only",
		"dev": "turbo dev",
		"build": "turbo build",
		"check-types": "turbo check-types",
		"dev:native": "turbo -F native dev",
		"dev:web": "turbo -F web dev",
		"db:push": "turbo -F @rediredge/db db:push",
		"db:studio": "turbo -F @rediredge/db db:studio",
		"db:generate": "turbo -F @rediredge/db db:generate",
		"db:migrate": "turbo -F @rediredge/db db:migrate",
		"db:start": "turbo -F @rediredge/db db:start",
		"db:watch": "turbo -F @rediredge/db db:watch",
		"db:stop": "turbo -F @rediredge/db db:stop",
		"db:down": "turbo -F @rediredge/db db:down"
	},
	"dependencies": {
		"@hookform/resolvers": "^5.2.2",
		"dotenv": "^17.2.2",
		"zod": "^4.1.11"
	},
	"devDependencies": {
		"turbo": "^2.5.4",
		"@biomejs/biome": "^2.2.0",
		"husky": "^9.1.7",
		"lint-staged": "^16.1.2",
		"tsdown": "^0.15.5",
		"@types/node": "^22.13.11"
	},
	"lint-staged": {
		"*.{js,ts,cjs,mjs,d.cts,d.mts,jsx,tsx,json,jsonc}": [
			"biome check --write ."
		]
	},
	"packageManager": "bun@1.3.0"
}
